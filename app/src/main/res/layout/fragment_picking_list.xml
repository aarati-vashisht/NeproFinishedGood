<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".productionjournal.ui.main.PickingListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="1dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/search_item"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextSearchItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittext_drawable"
                android:maxLines="1"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:padding="5dp"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageViewSearchButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:src="@drawable/search_icon"
                android:background="@drawable/button_ripple_effect"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="5dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/item_name"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Item 1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_weight="1"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutQuantity"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="1dp"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/quantity"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edittext_drawable"
                android:maxLines="1"
                android:enabled="false"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:padding="5dp"
                android:textSize="10sp" />

            <com.neprofinishedgood.custom_views.CustomButton
                android:id="@+id/buttonOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="@string/ok"
                android:padding="0dp"
                android:textColor="@color/white"
                android:layout_margin="4dp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPickingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/picking_list_layout" />

    </LinearLayout>

</LinearLayout>