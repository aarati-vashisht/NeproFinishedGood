<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qualitycheck.qualityholdandmove.QualityHoldAndMove">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="@string/scan_stillage"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/editTextScanStillage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:background="@drawable/editext_drawable"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutScanDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/stillage_layout" />

            <FrameLayout
                android:id="@+id/frameMark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewMark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/buttonColor"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:text="@string/mark"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayoutMarkButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonHold"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_ripple_effect"
                            android:gravity="center"
                            android:text="@string/button_hold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/buttonUnhold"
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:background="@drawable/button_ripple_effect"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:text="@string/unhold"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>