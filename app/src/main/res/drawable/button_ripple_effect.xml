<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:color="@color/transparentbuttonColor" tools:ignore="NewApi">
    <item android:id="@android:id/mask" android:state_enabled="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparentbuttonColor" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle" android:state_enabled="true" android:state_pressed="false">
            <gradient android:angle="90" android:endColor="@color/buttonColor" android:startColor="@color/buttonColor" android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>